{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "es2019",
      "dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "strictNullChecks": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "build",
    "rootDir": "src"
  },
  "include": [
    "./global.d.ts",
    "src/track.ts"
  ],
  "files": [
    "./src/track.ts"
  ],

  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
